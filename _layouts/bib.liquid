<div id="{{ entry.key }}" class="publication-entry">
  <div class="pub-title">&quot;{{ entry.title }}&quot;</div>

  <div class="pub-authors">
    {% for author in entry.author_array %}
      {% assign author_last = author.last | regex_replace: '[*∗†‡§¶‖&^]', '' %}
      {% if author.first contains '.' %}
        {% assign author_first = author.first %}
      {% else %}
        {% assign author_first = author.first | slice: 0, 1 | append: '.' %}
      {% endif %}
      {{ author_first }} {{ author_last }}{% unless forloop.last %}, {% endunless %}
    {% endfor %}
  </div>

  {% assign paper_link = '' %}
  {% if entry.html %}
    {% assign paper_link = entry.html %}
  {% elsif entry.doi %}
    {% assign paper_link = 'https://doi.org/' | append: entry.doi %}
  {% endif %}

  {% capture info_text %}
    {{ entry.journal }}{% if entry.volume %} {{ entry.volume }}{% endif %}{% if entry.pages %}, {{ entry.pages }}{% endif %}{% if entry.year %} ({{ entry.year }}){% endif %}
  {% endcapture %}

  <div class="pub-info">
    {% if paper_link != '' %}
      <a href="{{ paper_link }}">{{ info_text | strip_newlines | strip }}</a>
    {% else %}
      {{ info_text | strip_newlines | strip }}
    {% endif %}
    {% if entry.arxiv %}
      {% assign arxiv_link = 'https://doi.org/10.48550/arXiv.' | append: entry.arxiv %}
      <span class="pub-arxiv">(<a href="{{ arxiv_link }}">arXiv:{{ entry.arxiv }}</a>)</span>
    {% endif %}
  </div>
</div>
